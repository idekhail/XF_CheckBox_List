<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestCheckBox.AddCountryPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="AddCountry Page" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Entry x:Name="Name"  Placeholder="Name" WidthRequest="200"/>
            <Entry x:Name="Code"  Placeholder="Code"/>
        </StackLayout>
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button x:Name="Add" Text="Add" Clicked="Add_Clicked" />
            <Button x:Name="Home" Text="Home" />
        </StackLayout>

    </StackLayout>
</ContentPage>